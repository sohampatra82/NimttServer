        <div class="modal">
            <button class="close-btn" onclick="closePopup()">X</button>
            <p class="message">Student details uploaded successfully!</p>
        </div>
    </div> -->
    </form>
    <script>
        function showPopup() {
            document.getElementById("modalOverlay").style.display = "block";
        }

        function closePopup() {
            document.getElementById("modalOverlay").style.display = "none";


        }

        function calculateFees(event) {
            if (event.key === "Enter") {  // Check if Enter key is pressed
                let input = document.getElementById("paidfees").value;
                try {
                    let result = eval(input);  // Evaluate the math expression
                    if (!isNaN(result)) {
                        document.getElementById("paidfees").value = result; // Replace input with the result
                    }
                } catch (e) {
                    alert("Invalid Expression! Please enter a valid calculation.");
                }
                event.preventDefault(); // Prevent form submission on Enter
            }
        }
    </script>
</body>

</html>